package ui;

import java.io.IOException;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.testng.annotations.Test;

import base.BaseTest;

public class T1 extends BaseTest {

	@Test
	public static void test1() throws IOException, InterruptedException {

		setUp();
		driver.manage().window().maximize();
		String expected = driver.getTitle();
		String actual = "Login | Salesforce";
		softassert.assertEquals(actual, expected);

		WebElement usernameField = driver.findElement(By.xpath(loc.getProperty("username")));
		usernameField.sendKeys("renu@tek.com");
		String u = usernameField.getAttribute("value");
		System.out.println("the user name is displayed in user name field: " + u);

		WebElement passwordField = driver.findElement(By.xpath(loc.getProperty("password")));
		passwordField.clear();
		
		driver.findElement(By.xpath(loc.getProperty("login_button"))).click();

		WebElement error = driver.findElement(By.xpath(loc.getProperty("noPassword-errorMsg")));

		String actual1 = error.getText();
		String expected1 = "Please enter your password.";

		softassert.assertEquals(actual1, expected1);
		softassert.assertAll();
		// tearDown();

	}

}
