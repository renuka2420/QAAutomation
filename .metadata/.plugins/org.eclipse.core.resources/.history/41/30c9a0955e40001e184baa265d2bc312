package ui;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.testng.annotations.Test;

import base.BaseTest;

public class Test4b extends BaseTest {
	@Test
	public static void test4b() {
		driver.manage().window().maximize();
		String expected = driver.getTitle();
		String actual = "Login | Salesforce";
		softassert.assertEquals(actual, expected);
		
		WebElement usernameField= driver.findElement(By.xpath(loc.getProperty("username")));
		usernameField.sendKeys("123");
		String u = usernameField.getAttribute("value");
		System.out.println("the user name displayed in user name field is: " + u);
		WebElement passwordField=driver.findElement(By.xpath(loc.getProperty("password")));
		passwordField.sendKeys("123");
		String p=passwordField.getAttribute("value");
		System.out.println("the password displayed in password field is: "+p);
		driver.findElement(By.xpath(loc.getProperty("login_button"))).click();
		String Actual2=driver.findElement(By.xpath(loc.getProperty("incorrect_user_pass_errorMsg"))).getText();
		String Ecpedted2="Please check your username and password. If you still can't log in, contact your Salesforce administrator.";
		softassert.assertEquals(Actual2, Ecpedted2);
		softassert.assertAll();
		
	}
	
	
	

}
