package ui;

import java.io.IOException;

import org.openqa.selenium.By;
import org.testng.annotations.Test;

import base.BaseTest;

public class T4a extends BaseTest {
	@Test
	public static void test4() throws IOException, InterruptedException {
		
		driver.manage().window().maximize();
		String expected = driver.getTitle();
		String actual = "Login | Salesforce";
		softassert.assertEquals(actual, expected);
		
		driver.findElement(By.id(loc.getProperty("forgot_ur_pass_id"))).click();
		Thread.sleep(2000);
		String actual1 =driver.getTitle();
		String expected1="Forgot Your Password | Salesforce";
		softassert.assertEquals(actual1, expected1);
		driver.findElement(By.xpath(loc.getProperty("username_forgotpass"))).sendKeys("renu@tek.com");
		driver.findElement(By.xpath(loc.getProperty("continue"))).click();
		System.out.println(driver.getTitle());

		driver.findElement(By.className(loc.getProperty("return_toLogin_class"))).click();
		
		
		

	}

}
